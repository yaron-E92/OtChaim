<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OtChaim.Presentation.MAUI"
             xmlns:converters="clr-namespace:OtChaim.Presentation.MAUI.Converters"
             x:Class="OtChaim.Presentation.MAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <converters:NotNullConverter x:Key="NotNullConverter" />
            <converters:NullConverter x:Key="NullConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:emergency="clr-namespace:OtChaim.Presentation.MAUI.Pages.Tool"
             xmlns:viewModels="clr-namespace:OtChaim.Presentation.MAUI.ViewModels.Tool"
             x:Class="OtChaim.Presentation.MAUI.Pages.Tool.ToolTabPage"
             x:DataType="viewModels:ToolTabViewModel"
             BackgroundColor="{StaticResource Secondary}">

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*,Auto" Padding="20,40,20,10" BackgroundColor="{StaticResource Secondary}">
        <!-- Header with COM-MIT branding and mood indicator -->
        <!-- COM-MIT Logo -->
        <Image Grid.Row="0" Grid.Column="0" Source="commit_logo.png" HeightRequest="40" WidthRequest="120" HorizontalOptions="Start" />

        <!-- Title -->
        <Label Grid.Row="0" Grid.Column="1" Text="Tool" Style="{StaticResource PrimaryHeadline}" HorizontalOptions="Center" />

        <!-- Mood Indicator (Smiley Face) -->
        <Image Grid.Row="0" Grid.Column="2" Source="smiley_face.png" HeightRequest="40" WidthRequest="40" HorizontalOptions="End" />

        <!-- Platform-Specific Navigation -->
        <OnPlatform x:TypeArguments="View">
            <On Platform="Android,iOS">
                <!-- Non-Windows: CarouselView -->
                <Grid x:Name="CarouselContainer" Grid.Row="1" Grid.ColumnSpan="3">
                    <CarouselView x:Name="ToolCarousel"
                              ItemsSource="{Binding ToolPages}"
                              CurrentItem="{Binding CurrentPage}"
                              Loop="False"
                              IndicatorView="{x:Reference ToolIndicators}"
                              HorizontalScrollBarVisibility="Never"
                              VerticalScrollBarVisibility="Never">

                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <ContentView Content="{Binding}"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <!-- Navigation Indicators -->
                    <IndicatorView x:Name="ToolIndicators"
                               IndicatorColor="{StaticResource Gray400}"
                               SelectedIndicatorColor="{StaticResource Primary}"
                               HorizontalOptions="Center"
                               VerticalOptions="End"
                               Margin="0,0,0,20" />
                </Grid>
            </On>
            <On Platform="WinUI">
                <!-- Windows: Button Navigation -->
                <Grid x:Name="ButtonContainer" Grid.Row="1" Grid.ColumnSpan="3"
                            RowDefinitions="*,Auto"
                            ColumnDefinitions="Auto,*,Auto">

                    <!-- Page Content spans all three columns -->
                    <ContentView Grid.Row="0"
                                    Grid.ColumnSpan="3"
                                    Content="{Binding CurrentPage}" />

                    <!-- Navigation Controls -->
                    <Button Grid.Row="1" Grid.Column="0"
                                Text="‹ Previous"
                                Command="{Binding PreviousPageCommand}"
                                Style="{StaticResource MessageButton}" />

                    <Label Grid.Row="1" Grid.Column="1"
                               Text="{Binding CurrentPageTitle}"
                               Style="{StaticResource SecondaryHeadline}"
                               HorizontalOptions="Center" />

                    <Button Grid.Row="1" Grid.Column="2"
                                Text="Next ›"
                                Command="{Binding NextPageCommand}"
                                Style="{StaticResource MessageButton}" />
                </Grid>

            </On>
        </OnPlatform>

    </Grid>

</ContentPage>

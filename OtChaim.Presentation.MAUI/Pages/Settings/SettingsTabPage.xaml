<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:settings="clr-namespace:OtChaim.Presentation.MAUI.Pages.Settings"
             xmlns:viewModels="clr-namespace:OtChaim.Presentation.MAUI.ViewModels.Settings"
             xmlns:controls="clr-namespace:OtChaim.Presentation.MAUI.Controls"
             x:Class="OtChaim.Presentation.MAUI.Pages.Settings.SettingsTabPage"
             x:DataType="viewModels:SettingsTabViewModel"
             BackgroundColor="Orange">

    <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*" Padding="0,0,0,10">
        
                    <!-- Main Header (Primary Background) -->
            <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto" 
                  BackgroundColor="{StaticResource Primary}"
                  Padding="15,10,15,10"
                  HeightRequest="80">
            
            <!-- COM-MIT Logo (Left) -->
            <StackLayout Grid.Column="0" 
                         Orientation="Vertical"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"
                         Spacing="2">
                
                <!-- Comet Icon -->
                <Label Text="☄️"
                       FontSize="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
                
                <!-- COM-MIT Text -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="Center"
                             Spacing="0">
                    <Label Text="COM"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Label Text="-"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           Margin="2,0,2,0" />
                    <Label Text="MIT"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </StackLayout>
            </StackLayout>
            
            <!-- Title (Center) -->
            <Label Grid.Column="1" 
                   Text="Settings"
                   TextColor="White"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            
                            <!-- Profile Picture (Right) -->
                <Frame Grid.Column="2" 
                       BackgroundColor="{StaticResource Magenta}"
                       CornerRadius="25"
                       WidthRequest="50"
                       HeightRequest="50"
                       HorizontalOptions="End"
                       VerticalOptions="Center"
                       Padding="0">
                
                <Label Text=":("
                       TextColor="White"
                       FontSize="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>
        </Grid>
        
        <!-- Navigation Bar (White Background) -->
        <Frame Grid.Row="1" 
               BackgroundColor="White"
               CornerRadius="5"
               Margin="15,10,15,0"
               HeightRequest="40"
               Padding="0"
               BorderColor="LightGray">
            
            <Grid ColumnDefinitions="Auto,*,Auto">
                
                <!-- Left Arrow -->
                <Frame Grid.Column="0" 
                       BackgroundColor="{StaticResource Secondary}"
                       CornerRadius="20"
                       WidthRequest="40"
                       HeightRequest="40"
                       Padding="0"
                       BorderColor="Transparent">
                    <Label Text="‹"
                           TextColor="Black"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
                
                <!-- Center Title -->
                <Label Grid.Column="1" 
                       Text="User Info"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="Black"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
                
                <!-- Right Arrow -->
                <Frame Grid.Column="2" 
                       BackgroundColor="Yellow"
                       CornerRadius="20"
                       WidthRequest="40"
                       HeightRequest="40"
                       Padding="0"
                       BorderColor="Transparent">
                    <Label Text="›"
                           TextColor="Black"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
                </Frame>
            </Grid>
        </Frame>
        
        <!-- Content Area with Current Page -->
        <Grid Grid.Row="2" 
              x:Name="ContentGrid"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand" />

    </Grid>

</ContentPage>
